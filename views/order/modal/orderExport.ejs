<!-- Modal -->
<div class="modal" id="orderExportModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="orderExportModalLabel">Select Date Range</h5>
          <button type="button" id="closeOrderExportModal" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/orders/export" method="POST">   
            <div class="modal-body">
                <div class="form-group">                    
                    <label for="exportStart">Select Start Date</label>
                    <input class="form-control inputDate" name="exportStart">
                </div>  
                <div class="form-group">
                    <label for="exportEnd">Select End Date</label>
                    <input class="form-control inputDate" name="exportEnd">
                  </div>        
            </div>
            <div class="modal-footer">          
                <input type="submit" value="Export Orders" class="btn btn-primary" id="orderExportSubmit">
            </div>
        </form>
      </div>
    </div>
  </div>