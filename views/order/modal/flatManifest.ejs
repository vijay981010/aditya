<!-- Modal -->
<div class="modal" id="flatManifestModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="flatManifestModalLabel">Select Date</h5>
          <button type="button" id="closeModal" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/orders/client/flatmanifest" method="POST">   
            <div class="modal-body">
                <div class="form-group">
                    <label for="manifestDate">Date<span>*</span></label>
                    <input type="hidden" name="client" value="<%= user._id %>" id="client">
                    <input class="form-control inputDate" id="flatManifestDate" name="manifestDate" required>
                </div>          
            </div>
            <div class="modal-footer">          
                <input type="submit" value="Get Manifest" class="btn btn-primary" id="flatManifestSubmit">
            </div>
        </form>
      </div>
    </div>
  </div>