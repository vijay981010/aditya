    <div class="row">
        <div class="col-md-4">
            <div class="form-group">                    
                <label for="serviceCode">Service Code<span>*</span></label>                                                                               
                <input class="form-control text-uppercase" name="serviceCode" value="<%= service.serviceCode %>" type="text" minlength="5" maxlength="5" required/>                            
            </div>
        </div>            
        <div class="col-md-8">
            <div class="form-group">                    
                <label for="displayName">Display Name<span>*</span></label>                                                                               
                <input class="form-control" name="displayName" value="<%= service.displayName %>" type="text" required/>                            
            </div>
        </div>
