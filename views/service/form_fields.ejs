        <div class="col-md-4">
            <div class="form-group">
                <label for="serviceFsc">FSC (In Percent)</label>                                                                               
                <input class="form-control" name="serviceFsc" value="<%= service.serviceFsc ? service.serviceFsc : 0%>" type="number" step="0.01"/>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="serviceGst">GST</label>  
                <select class="form-select" name="serviceGst" required>
                    <option value="<%= service.serviceGst ? 'true' : 'false' %>"><%= service.serviceGst ? 'Yes' : 'No' %></option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>                                                                                            
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">                                                                            
                <label for="updateService">Upload File<span>*</span></label>                        
                <input type="file" class="form-control-file" name="uploaded_file" accept='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel' required>                            
            </div>        
        </div>
    </div>

    <div class="row">                                                                           
        <div class="col-md-6">                        
            <div class="form-group">
                <label for="order">Select Client</label><br>    
                <input type="hidden" name="admin" value="<%= user._id %>">                                                                     
                <select class="form-select" id="client">                                  
                    <% clientList.forEach(client => { %>                        
                        <option value="<%= client.username %>" data-id="<%= client._id %>"><%= client.username %></option>
                    <% }) %>                  
                </select>                            
            </div>    
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="actionClient">Action</label><br>                                                                         
                <button class="btn btn-primary btn-block" id="actionClient">Add Client</button>
            </div>
        </div> 
        <div class="row">                        
            <table class="table table-bordered table-responsive-sm" id="clientTable">                            
                    <tr>
                        <td><label for='client'>Client Name</label></td>                                                                                                        
                        <td><label for='clientRemove'>Action</label></td>
                    </tr>
                    <% if(service.client.length > 0) {  
                        service.client.forEach((client, i) => { %>
                        <tr id="r<%= i+100 %>">                                                
                            <td>
                                <input type='text' class='form-control text-center' value="<%= client.username %>" readonly>
                                <input type="hidden" name="client[]" value="<%= client._id %>"> 
                            </td>
                            <td><button class="btn btn-danger removeClient"><i class="fa fa-minus-circle"></i></button></td>
                        </tr>                                
                    <% })
                    } %>                          
            </table>                    
        </div>                                               
    </div>
                                                                     
</div>